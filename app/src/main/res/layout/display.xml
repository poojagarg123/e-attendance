    	android:orientation="vertical"
    	android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	<TextView 
    		android:id="@+id/Usn"
    		android:layout_width="300px"
    		
    		android:layout_height="80px"
    		android:text="vinit"
    		android:textColor="#FFFFFF"
    	/>
