<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	<TextView
		android:id="@+id/Usn1"
		android:layout_width="250px"
		android:layout_height="wrap_content"
		android:text="Name"
		android:textColor="#FFFFFF"
		android:textSize="40px" />

	<TextView

		android:id="@+id/student_id1"
		android:layout_width="250px"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/Usn1"
		android:text="Student id"
		android:textColor="#FFFFFF"
		android:textSize="40px" />

	<TextView
		android:id="@+id/Attended1"
		android:layout_width="100px"
		android:layout_height="wrap_content"

		android:layout_toRightOf="@id/student_id1"
		android:text="Attendance"
		android:textColor="#FFFFFF"
		android:textSize="40px"


		/>

	<TextView
		android:id="@+id/Missed1"
		android:layout_width="100px"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_toRightOf="@id/Attended1"
		android:text="Missed"
		android:textColor="#FFFFFF"
		android:textSize="40px"></TextView>


  
    	</RelativeLayout>